<div class="d-flex justify-content-between align-items-center mb-4 banner">
  <%= link_to "Simple Airbnb", flats_path%>
  <%= link_to "Add Flat", new_flat_path%>
</div>
<div class="map">
</div>
<div class="container d-flex justify-content-center">
  <div class="container-flat flex-column">
    <div class="card grey" style="width: 18rem;">
      <div class="card-body">
      <h1><%= @flat.name %></h1>
      <p> <%= @flat.address %> </p>
      </div>
    </div>
    <div class="card grey" style="width: 18rem;">
      <div class="card-body">
        <h3>Details</h3>
        <p> <%= @flat.price_per_night%> </p>
        <p> <%= @flat.number_of_guests%> </p>
      </div>
    </div>
  </div>
  <div class="container-info flex-column">
    <div class="card grey">
      <div class="card-body">
        <div class="social-media">
          <h4>Share</h4>
          <%# fontawsome %>
        </div>
      </div>
    </div>
    <div class="card grey" style="width: 18rem;">
      <div class="card-body">
        <div class="form-control">
          <h3>Book this place!</h3>
        </div>
      </div>
    </div>
  </div>
</div>
